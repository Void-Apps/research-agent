# Environment Variables Template
# Copy this file to .env and fill in your actual values

# API Keys (Required)
GOOGLE_SCHOLAR_API_KEY=your_google_scholar_api_key_here
GOOGLE_BOOKS_API_KEY=your_google_books_api_key_here
SCIENCEDIRECT_API_KEY=your_sciencedirect_api_key_here

# Database Configuration (Production)
MONGODB_ROOT_USERNAME=admin
MONGODB_ROOT_PASSWORD=your_secure_password_here
MONGODB_USERNAME=ai_research_user
MONGODB_PASSWORD=your_db_password_here
MONGODB_HOST=mongodb
MONGODB_PORT=27017

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# Security (Production)
SECRET_KEY=your_secret_key_here_minimum_32_characters

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Optional: External Services
REDIS_URL=redis://redis:6379