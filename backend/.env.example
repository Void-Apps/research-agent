# Backend Environment Configuration Template
# Copy this file to .env.development, .env.staging, or .env.production and fill in actual values

# Environment
ENVIRONMENT=development
DEBUG=true

# Database Configuration
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=ai_research_agent_dev
MONGODB_USERNAME=
MONGODB_PASSWORD=

# API Keys (REQUIRED - replace with actual keys)
GOOGLE_SCHOLAR_API_KEY=your_google_scholar_api_key_here
GOOGLE_BOOKS_API_KEY=your_google_books_api_key_here
SCIENCEDIRECT_API_KEY=your_sciencedirect_api_key_here

# Cache Configuration
CACHE_TTL_HOURS=24
CACHE_MAX_SIZE=1000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=detailed

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Security (for production)
SECRET_KEY=your_secret_key_here_minimum_32_characters
ACCESS_TOKEN_EXPIRE_MINUTES=30